@page "/monkeys"

<h2 style="text-align:center; margin-top:20px;">Monkey List</h2>

@if (monkeys.Count == 0)
{
    <p style="text-align:center; margin-top:20px;">No monkeys found</p>
}
else
{
    <div style="display:flex; flex-wrap:wrap; justify-content:center; gap:20px; margin-top:20px;">
        @foreach (var monkey in monkeys)
        {
            <div style="width:250px; border:1px solid #ccc; border-radius:10px; padding:10px; text-align:center; box-shadow: 2px 2px 6px rgba(0,0,0,0.1);">
                <img src="@monkey.Image" alt="@monkey.Name"
                     style="width:200px; height:200px; object-fit:cover; border-radius:10px;" />
                <h4 style="margin-top:10px;">@monkey.Name</h4>
                <p>@monkey.Location</p>
            </div>
        }
    </div>
}

